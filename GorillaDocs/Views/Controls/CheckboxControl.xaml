<UserControl x:Class="GorillaDocs.Views.Controls.CheckboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="thisUserControl"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="FormStyles.xaml" />
    </UserControl.Resources>
    <DockPanel Margin="5">
        <CheckBox Name="CheckboxInput" 
                  Content="{Binding ElementName=thisUserControl, Path=Label}" 
                  IsChecked="{Binding ElementName=thisUserControl, Path=IsChecked}"/>
    </DockPanel>
</UserControl>
